<table class="tabular">  
  <caption><%= pluralize(@results_total.size, 'Image datasets') %></caption>
  <thead>
    <tr>
		<% @column_headers.each do |column_header|%>
	      <th><%= column_header%></th>
	  <% end %>
      <th></th>
<% if edit_count > 0 %>
       <th></th>
<% end %>
      <th></th>
    </tr>
