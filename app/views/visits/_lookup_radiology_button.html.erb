<% @rad_reads = RadiologyOverread.where(:visit_id => @visit.id).to_a %>
<h2>Radiology Findings</h2>
	<% @rad_reads.each do |rad|%>

<table style='max-width:500px;'>
	<tbody>
		<tr><th>Field</th><th>Value</th></tr>
		<tr><td style='text-align:right;padding:3px;padding:3px;'>Scan Entry Date</td><td style='text-align:left;max-width:500pxpadding:3px;padding:3px;'><%= rad.scan_entry_date.nil? ? '??' : rad.scan_entry_date.strftime("%Y-%m-%d") %></td></tr>
		<tr><td style='text-align:right;padding:3px;'>RMR</td><td style='text-align:left;max-width:500pxpadding:3px;'><%= rad.rmr %></td></tr>
		<tr><td style='text-align:right;padding:3px;'>Gender</td><td style='text-align:left;max-width:500pxpadding:3px;'><%= rad.gender %></td></tr>
		<tr><td style='text-align:right;padding:3px;'>White matter change</td><td style='text-align:left;max-width:500pxpadding:3px;'><%= rad.white_matter_change %></td></tr>
		<tr><td style='text-align:right;padding:3px;'>Large vessel infarcts</td><td style='text-align:left;max-width:500pxpadding:3px;'><%= rad.adrc_large_vessel_infarcts %></td></tr>
		<tr><td style='text-align:right;padding:3px;'>Lacunar infarcts</td><td style='text-align:left;max-width:500pxpadding:3px;'><%= rad.adrc_lacunar_infarcts %></td></tr>
		<tr><td style='text-align:right;padding:3px;'>Macrohemorrhages</td><td style='text-align:left;max-width:500pxpadding:3px;'><%= rad.adrc_macrohemorrhages %></td></tr>
		<tr><td style='text-align:right;padding:3px;'>Microhemorrhages</td><td style='text-align:left;max-width:500pxpadding:3px;'><%= rad.adrc_microhemorrhages %></td></tr>
		<tr><td style='text-align:right;padding:3px;'>Moderate white matter hyperintensity</td><td style='text-align:left;max-width:500pxpadding:3px;'><%= rad.adrc_moderate_white_matter_hyperintensity %></td></tr>
		<tr><td style='text-align:right;padding:3px;'>Extensive white matter hyperintensity</td><td style='text-align:left;max-width:500pxpadding:3px;'><%= rad.adrc_extensive_white_matter_hyperintensity %></td></tr>
		<tr><td style='text-align:right;padding:3px;'>MPnRAGE Uncorrected?</td><td style='text-align:left;max-width:500pxpadding:3px;'><%= rad.mpnrage_uncorrected %></td></tr>
		<tr><td style='text-align:right;padding:3px;'>MPnRAGE Classic MOCO?</td><td style='text-align:left;max-width:500pxpadding:3px;'><%= rad.mpnrage_classic_moco %></td></tr>
		<tr><td style='text-align:right;padding:3px;'>MPnRAGE new recon?</td><td style='text-align:left;max-width:500pxpadding:3px;'><%= rad.mpnrage_new_recon %></td></tr>
		<tr><td style='text-align:right;padding:3px;'>Summary</td><td style='text-align:left;max-width:500pxpadding:3px;'><%= rad.summary %></td></tr>
		<tr><td style='text-align:right;padding:3px;'>Comments</td><td style='text-align:left;max-width:500pxpadding:3px;'><%= rad.comments %></td></tr>
		<tr><td style='text-align:right;padding:3px;'>Clerical Notes</td><td style='text-align:left;max-width:500pxpadding:3px;'><%= rad.clerical_notes %></td></tr>
		<tr><td style='text-align:right;padding:3px;'>Reader</td><td style='text-align:left;max-width:500pxpadding:3px;'><%= rad.reader_first_name %> <%= rad.reader_last_name %></td></tr>
		<tr><td style='text-align:right;padding:3px;'>Read on</td><td style='text-align:left;max-width:500pxpadding:3px;'><%= rad.read_date.nil? ? '??' : rad.read_date.strftime("%Y-%m-%d") %></td></tr>
	</tbody>
</table>

	<% end %>
